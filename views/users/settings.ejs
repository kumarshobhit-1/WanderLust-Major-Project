<% layout("/layouts/boilerplate") %>

<style>
  .settings-card .card-body {
    padding: 1.5rem !important;
  }
  
  /* On extra small screens, reduce padding slightly */
  @media (max-width: 576px) {
    .settings-card .card-body {
      padding: 1.25rem !important;
    }
  }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">

            <h2 class="mb-5 text-center fw-bold">Account Settings</h2>

            <div class="card mb-4 shadow-sm settings-card">
                <div class="card-body">
                    <div id="display-username" class="d-flex justify-content-between align-items-center gap-3">
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-1">Username</h5>
                            <p class="card-text text-muted mb-0"><%= currUser.username %></p>
                        </div>
                        <button class="btn btn-outline-primary btn-sm flex-shrink-0" id="editBtn-username" onclick="showEditForm('username')">Edit</button>
                    </div>

                    <div id="edit-username" class="mt-3" style="display: none;">
                        <h5 class="card-title mb-3">Edit Username</h5>
                        <form action="/settings/update-profile" method="POST" class="d-flex flex-column gap-2">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="text" name="username" class="form-control" value="<%= currUser.username %>" required>
                            <div class="d-grid d-sm-flex gap-2 justify-content-sm-end mt-2">
                                <button class="btn btn-success" type="submit">Save</button>
                                <button class="btn btn-secondary" type="button" onclick="hideEditForm('username')">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="card mb-4 shadow-sm settings-card">
                <div class="card-body">
                    <h5 class="card-title mb-1">Email</h5>
                    <p class="card-text text-muted mb-1"><%= currUser.email %></p>
                    <small class="text-muted">Contact support to change your email address.</small>
                </div>
            </div>

            <div class="card mb-4 shadow-sm settings-card">
                <div class="card-body">
                    <div id="display-password" class="d-flex justify-content-between align-items-center gap-3">
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-1">Password</h5>
                            <p class="card-text text-muted mb-0">********</p>
                        </div>
                        <button class="btn btn-outline-primary btn-sm flex-shrink-0" id="editBtn-password" onclick="showEditForm('password')">Change</button>
                    </div>

                    <div id="edit-password" class="mt-3" style="display: none;">
                        <h5 class="card-title mb-3">Change Password</h5>
                        <form action="/settings/update-password" method="POST" class="needs-validation d-flex flex-column gap-3" novalidate>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="password" name="currentPassword" class="form-control" placeholder="Current Password" required>
                            <input type="password" name="newPassword" class="form-control" placeholder="New Password" required>
                            <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm New Password" required>
                             <div class="d-grid d-sm-flex gap-2 justify-content-sm-end">
                                <button class="btn btn-success" type="submit">Save Password</button>
                                <button class="btn btn-secondary" type="button" onclick="hideEditForm('password')">Cancel</button>
                            </div>
                            <div class="mt-3">
                                <a href="/forgot-password">Forgot Password?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="card bg-danger text-white mb-4 shadow-sm settings-card">
                <div class="card-body">
                    <div id="display-delete" class="d-flex justify-content-between align-items-center gap-3">
                        <div class="flex-grow-1">
                            <h5 class="card-title mb-1">Delete Account</h5>
                            <p class="mb-0" style="opacity: 0.85;">This action cannot be undone.</p>
                        </div>
                        <button class="btn btn-light btn-sm flex-shrink-0" id="editBtn-delete" onclick="showEditForm('delete')">Delete</button>
                    </div>

                    <div id="edit-delete" class="mt-3" style="display: none;">
                        <h5 class="card-title mb-2">Confirm Account Deletion</h5>
                        <p>Are you sure you want to permanently delete your account?</p>
                        <form action="/settings/delete-account" method="POST" class="d-grid d-sm-flex gap-2 justify-content-sm-end">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="btn btn-light" type="submit">Yes, Delete</button>
                            <button class="btn btn-outline-light" type="button" onclick="hideEditForm('delete')">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function showEditForm(section) {
        document.getElementById(`display-${section}`).style.display = 'none';
        document.getElementById(`edit-${section}`).style.display = 'block';
        const editButton = document.getElementById(`editBtn-${section}`);
        if (editButton) {
            editButton.style.display = 'none';
        }
    }

    function hideEditForm(section) {
        document.getElementById(`display-${section}`).style.display = 'flex';
        document.getElementById(`edit-${section}`).style.display = 'none';
        const editButton = document.getElementById(`editBtn-${section}`);
        if (editButton) {
            editButton.style.display = 'block';
        }
    }
</script>
