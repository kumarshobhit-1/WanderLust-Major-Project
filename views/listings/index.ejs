<% layout("/layouts/boilerplate") %> 
<link rel="stylesheet" href="/css/style.css">

<!-- Filters Section -->
<div class="filters-wrapper position-relative">
  <!-- Left Arrow -->
  <button class="scroll-btn scroll-left">
    <i class="fa-solid fa-chevron-left"></i>
  </button>

  <div id="filters" class="d-flex align-items-center overflow-auto py-2 border-bottom">
    <div class="filter text-center me-3">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter text-center me-3">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter text-center me-3">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter text-center me-3">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter text-center me-3">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter text-center me-3">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter text-center me-3">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter text-center me-3">
      <div><i class="fa-regular fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter text-center me-3">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter text-center me-3">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </div>
    <div class="filter text-center me-3">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
    </div>
    <div class="tax-toggle ms-auto">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label small" for="switchCheckDefault">Show total price after taxes</label>
      </div>
    </div>
  </div>

  <!-- Right Arrow -->
  <button class="scroll-btn scroll-right">
    <i class="fa-solid fa-chevron-right"></i>
  </button>
</div>

<!-- Listings Grid -->
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 p-0 mt-3">
    <% for(let listings of allListings) { %>
        <div class="col">
            <a href="/listings/<%= listings._id %>" class="listing-link text-decoration-none text-dark">
                <div class="card listing-card h-100 shadow-sm">
                    <img src="<%= listings.image.url %>" class="card-img-top" alt="listing_image" style="height: 16rem; object-fit: cover;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listings.title %></b> <br>
                            &#8377; <%= listings.price.toLocaleString("en-IN") %> / night
                            <i class="tax-info text-muted"> &nbsp;+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>





