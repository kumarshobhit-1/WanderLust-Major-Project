<% layout("/layouts/boilerplate") %>
<script>
    const mapToken = "<%= mapToken %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>

<div class="container my-4 ">

    <div class="text-center mb-3">
        <h3><%= listing.title %></h3>
    </div>

    <div class="card mx-auto mb-4 show-card listing-card" style="max-width: 700px;">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text"><b>Owned by:</b> <i><%= listing.owner ? listing.owner.username : 'Deleted User' %></i></p>            <p class="card-text"><b>Description:</b> <%= listing.description %></p>
            <p class="card-text"><b>Price:</b> â‚¹ <%= listing.price.toLocaleString("en-IN") %></p>
            <p class="card-text"><b>Location:</b> <%= listing.location %></p>
            <p class="card-text"><b>Country:</b> <%= listing.country %></p>
        </div>
    </div>

    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="d-flex justify-content-center gap-3 mb-4 flex-wrap">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn">Edit</a>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
    <% } %>

    <div class="mx-auto" style="max-width: 700px;">
        <% if(currUser) { %>
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>
        <% } %>
    </div>

    <% if(listing.reviews && listing.reviews.length > 0) { %>
    <div class="mx-auto mb-5" style="max-width: 900px;">
      <h4 class="mb-4">All Reviews</h4>
      <div class="row g-3">
        <% for(review of listing.reviews) { %>
          
          <% if(review.author) { %>
            <div class="col-12 col-md-6">
              <div class="review-card">
                
                <div class="review-avatar">
                  <%= review.author.username.charAt(0).toUpperCase() %>
                </div>
                
                <div class="review-content">
                  <div class="review-header">
                    <span class="review-username">@<%= review.author.username %></span>
                    <p class="starability-result" data-rating="<%= review.rating %>"></p>
                  </div>
                  <p class="review-text"><%= review.comment %></p>

                  <% if(currUser && review.author._id.equals(currUser._id)) { %>
                    <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          <% } %>

        <% } %>
      </div>
    </div>
  <% } %>


    <div class="mx-auto mb-5" style="max-width: 900px;">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>

</div>

<script src="/javascript/map.js"></script> 
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/rating.css">
