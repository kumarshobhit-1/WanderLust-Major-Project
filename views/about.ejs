<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/style.css">

<!-- Hero / Intro -->
<section class="about-hero text-center text-white d-flex align-items-center">
  <div class="container py-5">
    <h1 class="fw-bold mb-3">About Wanderlust</h1>
    <p class="lead mb-4">Every journey tells a story. Wanderlust connects you with unique homes, vibrant cities, and unforgettable experiences worldwide.</p>
    <a href="/listings" class="btn btn-light btn-lg rounded-pill px-4">Explore Stays</a>
  </div>
</section>

<!-- Mission + Stats -->
<section class="container py-5">
  <div class="row g-4 align-items-center">
    <div class="col-12 col-lg-6">
      <h2 class="mb-3">Our Mission</h2>
      <p class="text-muted">To make travel seamless, affordable, and memorable. We are committed to building a secure, transparent, and guest–host friendly platform where every experience matters.</p>
      <ul class="list-unstyled mt-3">
        <li class="d-flex align-items-start mb-2">
          <i class="fa-solid fa-shield-halved me-2 mt-1 text-success"></i>
          Trust & Safety: Verified listings, insurance coverage, and reliable support
        </li>
        <li class="d-flex align-items-start mb-2">
          <i class="fa-solid fa-hand-holding-heart me-2 mt-1 text-danger"></i>
          Community-Driven: Inclusive, diverse, and people-first
        </li>
        <li class="d-flex align-items-start">
          <i class="fa-solid fa-earth-asia me-2 mt-1 text-primary"></i>
          Global Reach, Local Experiences: Travel authentically, anywhere
        </li>
      </ul>
    </div>
    <div class="col-12 col-lg-6">
      <div class="row g-3 text-center">
        <div class="col-6">
          <div class="about-stat card shadow-sm p-3">
            <h3 class="mb-0">50K+</h3>
            <small class="text-muted">Happy Guests</small>
          </div>
        </div>
        <div class="col-6">
          <div class="about-stat card shadow-sm p-3">
            <h3 class="mb-0">10K+</h3>
            <small class="text-muted">Active Listings</small>
          </div>
        </div>
        <div class="col-6">
          <div class="about-stat card shadow-sm p-3">
            <h3 class="mb-0">120+</h3>
            <small class="text-muted">Cities Worldwide</small>
          </div>
        </div>
        <div class="col-6">
          <div class="about-stat card shadow-sm p-3">
            <h3 class="mb-0">4.8★</h3>
            <small class="text-muted">Average Rating</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Values (Cards) -->
<section class="container py-4">
  <div class="row g-4">
    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm border-0 rounded-4">
        <div class="card-body">
          <i class="fa-solid fa-user-check fs-3 mb-3 text-primary"></i>
          <h5>Empowering Hosts</h5>
          <p class="text-muted mb-0">Smart pricing, calendar flexibility, instant payouts, and dedicated support — everything hosts need in one place.</p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm border-0 rounded-4">
        <div class="card-body">
          <i class="fa-solid fa-stars fs-3 mb-3 text-warning"></i>
          <h5>Quality You Can Rely On</h5>
          <p class="text-muted mb-0">Verified photos, trusted reviews, and transparent policies ensure peace of mind for every stay.</p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card h-100 shadow-sm border-0 rounded-4">
        <div class="card-body">
          <i class="fa-solid fa-headset fs-3 mb-3 text-success"></i>
          <h5>24/7 Guest Support</h5>
          <p class="text-muted mb-0">Wherever you are, our support team is always just a click away.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- How it works -->
<section class="container py-5">
  <h2 class="text-center mb-4">How Wanderlust Works</h2>
  <div class="row g-4">
    <div class="col-12 col-md-4 text-center">
      <i class="fa-solid fa-magnifying-glass-location fs-1 mb-2 text-danger"></i>
      <h6>Discover</h6>
      <p class="text-muted">Find your ideal stay with location, date, and price filters tailored to your journey.</p>
    </div>
    <div class="col-12 col-md-4 text-center">
      <i class="fa-solid fa-calendar-check fs-1 mb-2 text-primary"></i>
      <h6>Book</h6>
      <p class="text-muted">Choose instant booking or request-to-book with a secure checkout experience.</p>
    </div>
    <div class="col-12 col-md-4 text-center">
      <i class="fa-solid fa-key fs-1 mb-2 text-success"></i>
      <h6>Stay</h6>
      <p class="text-muted">Enjoy seamless check-in, clear house rules, and authentic local recommendations.</p>
    </div>
  </div>
</section>

<!-- CTA Banner -->
<section class="container py-5">
  <div class="cta card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="row g-0 align-items-center">
      <div class="col-12 col-lg-8 p-4">
        <h3 class="mb-2">Turn Your Home Into Income</h3>
        <p class="text-muted mb-3">Become a Wanderlust host and earn extra income while meeting travelers from around the world.</p>
        <a href="/listings/new" class="btn btn-dark add-btn rounded-pill px-4">Start Hosting</a>
      </div>
      <div class="col-12 col-lg-4">
        <img src="https://unsplash.com/photo-1505692794403-34d4982a83c9?q=80&w=1200&auto=format&fit=crop" class="w-100 h-100 object-fit-cover" alt="Host">
      </div>
    </div>
  </div>
</section>

<!-- FAQs -->
<section class="container py-5">
  <h2 class="text-center mb-4">Frequently Asked Questions</h2>
  <div class="accordion mx-auto" id="faq" style="max-width: 900px;">
    <div class="accordion-item">
      <h2 class="accordion-header" id="q1">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#a1">Is booking secure?</button>
      </h2>
      <div id="a1" class="accordion-collapse collapse show" data-bs-parent="#faq">
        <div class="accordion-body">Yes. Payments are encrypted, and both guests and hosts go through a verification process.</div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header" id="q2">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a2">What is the cancellation policy?</button>
      </h2>
      <div id="a2" class="accordion-collapse collapse" data-bs-parent="#faq">
        <div class="accordion-body">Each listing may have different cancellation policies. Please review the “Policies” section before booking.</div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header" id="q3">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a3">How do I become a host?</button>
      </h2>
      <div id="a3" class="accordion-collapse collapse" data-bs-parent="#faq">
        <div class="accordion-body">Simply create an account, complete your hosting profile, and publish your first listing!</div>
      </div>
    </div>
  </div>
</section>
